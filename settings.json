    "Bash(echo:*)",
    "Bash(find:*)",
    "Bash(gh:*)",
    "Bash(git:*)",
    "Bash(grep:*)",
    "Bash(head:*)",
    "Bash(ls:*)",
    "Bash(markdownlint:*)",
    "Bash(mkdir:*)",
    "Bash(mv:*)",
    "Bash(npm run build)",
    "Bash(npm run dev)",
    "Bash(npm run lint)",
    "Bash(npm run test:*)",
    "Bash(npm:*)",
    "Bash(pip:*)",
    "Bash(pre-commit:*)",
    "Bash(python:*)",
    "Bash(python3:*)",
    "Bash(ruff:*)",
    "Bash(shellcheck:*)",
    "Bash(tail:*)",
    "Bash(test:*)",
    "Bash(tree:*)",
    "Bash(xargs:*)",
    "Bash(xxd:*)",
    "Bash(yarn build)",
    "Bash(yarn lint)",
    "Bash(yarn test:*)",
    "Bash(yarn:*)",

    "Read(/Users/thomasholknielsen/Code Workspaces/**)",
    "Read(/tmp/**)",
    "Read(~/.bashrc)",
    "Read(~/.gitconfig)",
    "Read(~/.zshrc)",

    "SlashCommand(*)",

    "WebFetch",
    "WebSearch",

    "mcp__context7",
    "mcp__ide__executeCode",
    "mcp__playwright"
  ],
  "deny": [
    "Read(.env)",
    "Read(**/.env*)",
    "Read(**/.secret*)",
    "Read(**/secrets/**)",
    "Read(**/credentials/**)",
    "Read(**/.ssh/**)",
    "Read(**/.aws/**)",
    "Read(**/.gcp/**)",

    "Read(**/.git/config)",
    "Read(**/env*)",
    "Read(**/*.pem)",
    "Read(**/*.key)",
    "Read(**/*.crt)",
    "Read(**/*.cert)",
    "Read(**/*.p12)",

    "Read(**/node_modules/**)",
    "Read(**/dist/**)",
    "Read(**/build/**)",
    "Read(**/target/**)",
    "Read(**/coverage/**)",
    "Read(**/.cache/**)",
    "Read(**/logs/**)",
    "Read(**/temp/**)",
    "Read(**/tmp/**)",

    "Read(**/package-lock.json)",
    "Read(**/yarn.lock)",
    "Read(**/*.log)",
    "Read(**/*.bak)",
    "Read(**/*.backup)",
    "Read(**/*.db)",
    "Read(**/*.sqlite*)",

    "Bash(curl:*)",
    "Bash(ftp:*)",
    "Bash(rm -rf:*)",
    "Bash(rsync:*)",
    "Bash(scp:*)",
    "Bash(ssh:*)",
    "Bash(sudo:*)",
    "Bash(wget:*)"
  ]
},
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python -c \"import os; exec(open(os.path.expanduser('~/.claude/scripts/hooks/log-prompt.py')).read())\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python -c \"import os; exec(open(os.path.expanduser('~/.claude/scripts/hooks/notify.py')).read())\""
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "WebSearch",
        "hooks": [
          {
            "type": "command",
            "command": "python -c \"import os; exec(open(os.path.expanduser('~/.claude/scripts/hooks/update-search-year.py')).read())\""
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "python3 .claude/scripts/context-monitor.py"
  }
}
