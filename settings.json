{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python -c \"import os; exec(open(os.path.expanduser('~/.claude/scripts/log-prompt.py')).read())\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python -c \"import os; exec(open(os.path.expanduser('~/.claude/scripts/notify.py')).read())\""
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); printf \"PS %s@%s:%s>\" \"$(whoami)\" \"$(hostname)\" \"$(echo \"$input\" | jq -r '.workspace.current_dir' | sed 's|.*/||')\""
  }
}

